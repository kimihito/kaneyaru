                 <?php
                 while($data = mysql_fetch_array($result)): 
                  ?>
                    <tr>
                         <th> <?php print '<img src="http://img.tweetimag.es/i/'  . htmlspecialchars($_SESSION['screen_name']) . '_b">' ?>
                        </th>
